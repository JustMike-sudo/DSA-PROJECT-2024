// Create phonebook instance
    phonebook = new Phonebook()
    
    // Enqueue contacts into phonebook
    phonebook.enqueue(new Contact("FirstName1", "LastName1", "ContactNumber1"))
    phonebook.enqueue(new Contact("FirstName2", "LastName2", "ContactNumber2"))
    phonebook.enqueue(new Contact("FirstName3", "LastName3", "ContactNumber3"))
    
    // Display all contacts
    DISPLAY "Contacts:"
    phonebook.displayContacts()
    
    // Convert contacts queue to list
    contactList = new ArrayList<>(phonebook.contacts)
    
    // Sort contacts using mergeSort
    sortedContacts = phonebook.mergeSort(contactList)
    
    // Display sorted contacts
    DISPLAY "Sorted Contacts:"
    FOR contact IN sortedContacts DO
        DISPLAY contact.firstName + " " + contact.lastName + ": " + contact.contactNumber
    ENDFOR
    
    // Search for a contact using binarySearch
    searchFirstName = "FirstName2"
    searchLastName = "LastName2"
    index = phonebook.binarySearch(sortedContacts, searchFirstName, searchLastName)
    IF (index != -1) THEN
        DISPLAY "Contact found: " + sortedContacts.get(index).firstName + " " + sortedContacts.get(index).lastName + ": " + sortedContacts.get(index).contactNumber
    ELSE
        DISPLAY "Contact not found."
    ENDIF
